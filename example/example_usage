    seq = 0
    print("seq,co2,temperature,humidity")
    #lcd.print(0, "SCD4X CO2 Sensor")
    #lcd.print(1, "Initializing...")

    while True:
        if scd4x.data_ready:
            print("CO2: %d ppm" % scd4x.CO2)
            print("Temperature: %0.1f *C" % scd4x.temperature)
            print("Humidity: %0.1f %%" % scd4x.relative_humidity)
            print()
        time.sleep(1)