if __name__ == "__main__":

    # I2C0: SCD4X
    i2c0 = machine.I2C(0, freq=100000)
    print("i2c0 scan result:", i2c0.scan())
    scd4x = SCD4X(i2c0)
    scd4x.start_periodic_measurement()

    # I2C1: LCD
    #i2c1 = machine.I2C(1, sda=machine.Pin(2), scl=machine.Pin(3), freq=100000)
